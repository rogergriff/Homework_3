int fib(int response){
	int num1 = 0;
	int num2 = 1;
	int sum = 0;
	if (response == 1)
		sum = 1;
	else{
		for (int i = 1; i < response; i++){
			sum = fib_seq(num1, num2);

		}
	}
	return sum;
}

int fib_seq(int &a, int &b){
	int sum = 0;
	sum = a + b;
	a = b;
	b = sum;
	return sum;
}
