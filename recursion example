char inputValidater() //Simple recursion function to make input be either y or n
{
	char catcher = 'a';
	char repeat = 'a';
	cout << "Would you like to convert another number muddafucka? Please respond y or n: \n";
	cin >> catcher;
	catcher = tolower(catcher);
	if (catcher == 'y' || catcher == 'n')
		return catcher;
	else
	{
		cout << "DO YOU LISTEN, Y OR N FUCKER \n";
		catcher = inputValidater(); //the actual recursive part
		return catcher;
	}
